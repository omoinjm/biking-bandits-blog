---
const isProd = import.meta.env.PROD
const baseAssetUrl = isProd
  ? 'https://craftzdog.global.ssl.fastly.net/uses'
  : ''
---

<section class="relative mb-6 h-screen flex justify-center items-center">
  <div class="absolute w-full h-full overflow-hidden">
    <video
      class="absolute inset-0 min-w-full min-h-full object-cover opacity-30"
      poster="/bikingbandits/1.jpg"
      autoplay="autoplay"
      muted="muted"
      loop="loop"
      playsinline
      ><source
        src={'https://clipchamp.com/watch/YOLeeR2GOCq/embed'}
        type="video/webm; codecs=vp9"
      />
      <source
        src={'https://clipchamp.com/watch/YOLeeR2GOCq/embed'}
        type="video/mp4; codecs=hvc1"
      />
    </video>
  </div>
  <div class="z-10 text-center px-8 drop-shadow-lg shadow-black">
    <div class="uppercase text-sm mb-4">Welcome to</div>
    <div class="text-4xl font-mplus font-medium">
      A curated blog post of all the gadgets and tools we <span
        class="text-orange-500">use</span
      >
    </div>
  </div>
</section>
